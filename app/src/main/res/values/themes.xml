<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseManager" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="android:forceDarkAllowed">false</item>-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/highlight_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/status_bar</item>
        <item name="android:navigationBarColor">@color/light_blue</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
        <item name="android:navigationBarColor">#001da1f3</item>

    </style>
    <style name="MyAppBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextAppearance">@style/MyTitleTextAppearance</item>
        <item name="android:subtitleTextAppearance">@style/MySubtitleTextAppearance</item>
    </style>

    <style name="MyTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
        <item name="android:fontFamily">@font/cursive</item>
    </style>

    <style name="MySubtitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>
    <style name="BottomNavigationTextStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
    </style>
    <style name="myPrefixTextSize" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <style name="blackButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">25</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="whiteButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">25</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_alternates_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>