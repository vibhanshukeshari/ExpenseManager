<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="30"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/black" />


        <TextView
            android:id="@+id/tv_phrase"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="30"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:gravity="center_vertical|end"
            android:padding="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="40"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:gravity="bottom|end"
            android:padding="5dp"
            android:text="0"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="60"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:paddingTop="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_clear"
                style="@style/blackButtons"
                android:text="c" />

            <Button
                android:id="@+id/btn_clear_display"
                style="@style/blackButtons"
                android:text="AC" />

            <Button
                android:id="@+id/btn_negative"
                style="@style/blackButtons"
                android:text="+/-" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/blackButtons"
                android:contentDescription="delete"
                android:text="del"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="35dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_1"
                style="@style/whiteButtons"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/whiteButtons"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/whiteButtons"
                android:text="3" />

            <Button
                android:id="@+id/btn_division"
                style="@style/blackButtons"
                android:contentDescription="division"
                android:text="/"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_4"
                style="@style/whiteButtons"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/whiteButtons"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/whiteButtons"
                android:text="6" />

            <Button
                android:id="@+id/btn_multiplication"
                style="@style/blackButtons"
                android:text="x" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_7"
                style="@style/whiteButtons"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/whiteButtons"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/whiteButtons"
                android:text="9" />

            <Button
                android:id="@+id/btn_submission"
                style="@style/blackButtons"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_0"
                style="@style/whiteButtons"
                android:text="0" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/whiteButtons"
                android:contentDescription="dot"
                android:text="."
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="15dp"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/blackButtons"
                android:text="=" />

            <Button
                android:id="@+id/btn_sum"
                style="@style/blackButtons"
                android:text="+" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>